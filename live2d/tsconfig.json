{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@framework/*": [
                "cubism/Framework/src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "cubism/Core/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}